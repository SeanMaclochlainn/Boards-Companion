{
    "manifest_version": 2,
    "name": "Boards Companion",
    "version": "0.0.1",
    "description": "Extension to enhance boards.ie user experience",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.boards.ie/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "main.js",
        "elementDisplayUpdater.js"
    ]
}