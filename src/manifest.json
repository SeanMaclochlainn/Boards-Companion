{
    "manifest_version": 2,
    "name": "Boards Companion",
    "version": "1.3.0",
    "description": "Extension to enhance boards.ie user experience",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "extensionConfiguration.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.boards.ie/*"
            ],
            "js": [
                "content.js",
                "fontawesome/all.js"
            ],
            "css": [
                "css/modal.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        "main.js",
        "ElementDisplayUpdater.js",
        "ElementVisibilityUpdater.js",
        "ElementFinder.js",
        "HeaderTransparencyToggler.js",
        "AutomaticPageLoader.js",
        "ElementGenerator.js",
        "PageInformationCollector.js",
        "PageInternalsUpdater.js",
        "PostsCompressionToggler.js",
        "BoardsScriptGenerator.js",
        "ConfigurationSettings.js",
        "ConfigurationSettingExecutor.js",
        "LoadingElementUpdater.js",
        "BoardsScriptInserter.js",
        "PostsFormatter.js",
        "ForumHomepageUpdater.js",
        "ThreadPageUpdater.js",
        "ThreadPageAppender.js",
        "ThreadPagePrepender.js",
        "ForumHomepageAppender.js",
        "NavigatorUpdater.js",
        "ForumHomepagePrepender.js",
        "PostHtmlUpdater.js",
        "UserTagger.js",
        "StorageUpdater.js",
        "StorageRetriever.js",
        "TaggedUsersUpdater.js",
        "TaggedUsersRetriever.js",
        "ModalDetailsFinder.js"
    ]
}