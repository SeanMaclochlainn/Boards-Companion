{
    "manifest_version": 2,
    "name": "Boards Companion",
    "version": "0.0.1",
    "description": "Extension to enhance boards.ie user experience",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.boards.ie/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "main.js",
        "ElementDisplayUpdater.js",
        "ElementVisibilityUpdater.js",
        "ElementFinder.js", 
        "HeaderReducer.js",
        "AutomaticPageLoader.js",
        "ElementGenerator.js",
        "PageInformationCollector.js"
    ]
}